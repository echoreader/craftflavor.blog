{
  "name": "craftflavor-blog",
  "version": "1.0.0",
  "description": "Static blog for craftflavor.blog built with Next.js",
  "author": "Echo Reader",
  "scripts": {
    "dev": "next",
    "dev:watch": "next-remote-watch ./posts",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "lint": "eslint . --fix",
    "generate-sitemap-post": "node scripts/generate-sitemap-post.js",
    "generate-sitemap-page": "node scripts/generate-sitemap-page.js",
    "generate-sitemap-index": "node scripts/generate-sitemap-index.js",
    "generate-sitemap": "npm run generate-sitemap-post && npm run generate-sitemap-page && npm run generate-sitemap-index"
  },
  "dependencies": {
    "@mapbox/rehype-prism": "0.9.0",
    "@tailwindcss/typography": "0.5.12",
    "classnames": "2.3.1",
    "gray-matter": "4.0.3",
    "next": "13.4.19",
    "next-mdx-remote": "5.0.0",
    "next-remote-watch": "2.0.0",
    "next-sitemap": "4.2.3",
    "prismjs": "1.29.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rehype-unwrap-images": "1.0.0",
    "remark-gfm": "4.0.0"
  },
  "devDependencies": {
    "@stackbit/cms-git": "1.0.32",
    "@stackbit/types": "2.0.1",
    "@tailwindcss/postcss": "4.0.16",
    "eslint": "8.57.0",
    "eslint-config-next": "13.4.19",
    "eslint-config-prettier": "9.1.0",
    "postcss": "8.4.38",
    "tailwindcss": "4.0.16",
    "typescript": "5.1.3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/echoreader/craftflavor.blog"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
